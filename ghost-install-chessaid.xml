	<features>
		<feature id="core" name="Jose 1.3.4" description="Jose Chess Database" required="1">
			<components>
				<component id="jose"/>
			</components>
		</feature>
		<feature id="jre" name="J2SE 5.0" description="Java Runtime Environment">
			<components>
				<component id="jre"/>
			</components>
		</feature>
		<feature id="course" name="ChessAid Courses" description="ChessAid Courses">
			<components>
				<component id="course"/>
			</components>
		</feature>
	</features>
	<packages>
		<package filename="setup" main="1">
			<!-- contains the setup files -->
			<plugins>
				<plugin id="StdUI">
					<config>
						<paramgroup name="Config">
							<param name="PreInstallDialogSequence" value="DLG_DIR,DLG_INSTALLTYPE,DLG_GROUP,DLG_START"/>
							<!-- DLG_LANGUAGE,DLG_WELCOME DLG_LICENSE DLG_README -->
							<!--param name="PostInstallDialogSequence" value=""/-->
							<param name="ShowMainWindow" value="0"/>
							<param name="ShowFinalDialog" value="1"/>
							<param name="ShowDialogTitle" value="1"/>
							<param name="StretchBanner" value="0"/>
							<param name="DialogFont" value="MS Sans Serif,8"/>
							<!--param name="DialogBitmap" value="%Presetup%\splash.jpg"/-->
							<param name="DialogTitleFont" value="MS Sans Serif,18,$800000,B"/>
							<param name="DialogTitleShadow" value="1"/>
							<param name="DialogTitleShadowColor" value="$C0C0C0"/>
							<param name="DialogPosition" value="1,1"/>
						</paramgroup>
					</config>
				</plugin>
			</plugins>
			<components>
				<!-- Chess Aid course files -->
				<component dst="%InstallPath%\course" id="course" name="ChessAid Courses">
					<files>
						<!-- copy PGN files to jose/pgn -->
						<file dst="*.*" src="course\*.*" flags="external"/>
					</files>
				</component>
				<!-- Jose files -->
				<component dst="%InstallPath%" id="jose" name="Jose 1.3.4">
					<files>
						<file dst="*.*" src="jose\*.*"/>
						<!--                    install fonts system-wide:
						<file src="fonts\*.ttf"
							dst="%Fonts%\*.ttf" flags="reg_font,dont_log"/>
						-->
					</files>
					<shortcuts>
						<shortcut cmdline="%InstallPath%\jose.exe" name="%ProgramsMenu%\%ProgramGroup%\jose" workdir="%InstallPath%"/>
						<shortcut cmdline="%InstallPath%\doc\man\index.html" name="%ProgramsMenu%\%ProgramGroup%\Manual" workdir="%InstallPath%"/>
						<shortcut cmdline="%InstallPath%\Uninstall.exe" name="%ProgramsMenu%\%ProgramGroup%\Uninstall jose" workdir="%InstallPath%"/>
						<shortcut cmdline="%InstallPath%\jose.exe" name="%Desktop%\jose" workdir="%InstallPath%"/>
					</shortcuts>
				</component>
				<!-- JRE -->
				<component dst="%InstallPath%\jre-windows" id="jre" name="JRE 1.4.2">
					<files>
						<file dst="*.*" src="jre-windows\*.*"/>
					</files>
				</component>
				<!-- Sample Database -->
				<!--
				<component dst="%InstallPath%\database" id="db" name="Sample Database">
					<files>
						<file dst="*.*" src="database\*.*" flags="dont_log"/>
					</files>
				</component>
-->
			</components>
		</package>
	</packages>
	<variables>
		<var name="AppID" value="jose-chess"/>
		<var name="AppName" value="jose"/>
		<var name="AppVersion" value="1.3.4"/>
		<var name="AppIcon" value="%InstallPath\jose.exe"/>
		<var name="AppHomeURL" value="http://jose-chess.sourceforge.net"/>
		<var name="AppReadme" value="%InstallPath%\RELEASE NOTES"/>
		
		<var name="ProgramGroup" value="jose"/>
		<var name="InstallPath" value="%ProgramFiles%\jose"/>
		<var name="Uninstall" value="1"/>
		<var name="CompressionLevel" value="7"/>
		<!--var name="DontPackFiles" value="1"/-->
		
		<var name="DisableAddRemove=" value="0"/>
		<var name="DisableRepair" value="0"/>
		<var name="DisableRollback" value="0"/>
		
		<var name="RemoveOldReferences" value="1"/>
		<var name="Reboot" value="0"/>
		<!--var name="SplashBitmap" value="Presetup\splash.jpg"/-->
	</variables>
</gi2project>
